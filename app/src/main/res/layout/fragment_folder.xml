<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.folder.FolderFragment">

    <LinearLayout
        android:id="@+id/view2"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/round_view"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/round_text"
            android:drawableLeft="@drawable/note_add"
            android:ems="10"
            android:hint=" Add quick note"
            android:inputType="textPersonName"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:src="@drawable/danhsach" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:src="@drawable/photo" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:src="@drawable/anh" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:src="@drawable/mic" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:src="@drawable/theme" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view3"
        android:layout_width="353dp"
        android:layout_height="150dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:text="RECENTS"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <LinearLayout
                android:id="@+id/view5"
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_viewffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="79dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="To-do list"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="83dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:text="item 1"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="83dp"
                    android:layout_height="20dp"
                    android:text="item 2"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="83dp"
                    android:layout_height="20dp"
                    android:text="item 3"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="81dp"
                    android:layout_height="20dp"
                    android:text="item 4"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="81dp"
                    android:layout_height="20dp"
                    android:text="item 5"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view6"
                android:layout_width="19dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_viewffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" Learn English"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="I have app note perfect"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view7"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_viewffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Learn English"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="I have app note perfect"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view8"
                android:layout_width="17dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_viewffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Learn English"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="I have app note perfect"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="5dp"
        android:text="Label"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/view9"
        android:layout_width="match_parent"
        android:layout_height="296dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:src="@drawable/tagdailylife"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="-3dp"
            />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="-18dp"
            android:src="@drawable/tagtodolist"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="43dp"

            />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="-18dp"
            android:src="@drawable/tagscrap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="93dp" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="-18dp"
            android:src="@drawable/tagstudy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="139dp" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="-18dp"
            android:src="@drawable/tagthoughts" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="-18dp"
            android:src="@drawable/tagidea" />

    </LinearLayout>

</LinearLayout>